{
  "name": "mcp-on-demand",
  "version": "0.1.0",
  "description": "Load MCP servers on-demand instead of keeping them in context permanently. Zero token overhead when not in use.",
  "type": "module",
  "main": "src/session-manager.js",
  "bin": {
    "mcp-on-demand": "./bin/mcp-on-demand.js"
  },
  "scripts": {
    "setup": "node scripts/setup.js",
    "postinstall": "node scripts/setup.js",
    "start": "node src/session-manager.js",
    "start:bg": "node src/session-manager.js &",
    "cli": "node src/session-cli.js",
    "call": "node scripts/mcp-call.js"
  },
  "keywords": ["mcp", "model-context-protocol", "on-demand", "dynamic", "context-efficient", "claude-code"],
  "author": "Mattias Fagerlund",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mfagerlund/mcp-on-demand.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0"
  }
}
